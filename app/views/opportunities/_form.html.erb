<%= simple_form_for @opportunity do |f| %>

      <% if @opportunity.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@opportunity.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
          <% @opportunity.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

  <%= f.input :opportunity_name, :required => true,  input_html:{ class: "form-control" } %>
  <%= f.input :opportunity_owner, :required => true, input_html:{ :required => true, class: "form-control" }  %>
  <%= f.label :Opportunity_Account %>
  <%= f.select :account_id, options_for_select(@accounts),{:include_blank => '-- Select One --'}, { :required => true, class: "form-control" } %>

  <hr>
  <%= f.input :opportunity_amount, input_html:{ class: "form-control" }  %>
  <%= f.label :Opportunty_Stage %>
  <%= f.select :opportunity_stage, options_for_select(@opportunity_stages),{:include_blank => '-- Select One --'}, { :required => true, class: "form-control" } %>

  <%= f.input :opportunity_probability, input_html:{ class: "form-control" }  %>
  <%= f.input :opportunity_contact_name, input_html:{ class: "form-control" }  %>
  <%= f.input :opportunity_comments,  :as => :text, input_html:{ class: "form-control"}  %>
  <%= f.input :opportunity_closing_date, input_html:{ class: "form-control" }  %>
  <%= f.button :submit, class: "btn submit-button btn-lg btn-warning"  %>

<% end %>