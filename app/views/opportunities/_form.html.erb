  <%= f.input :opportunity_owner, :required => true, input_html:{ class: "form-control" }  %>
  
  <hr>
  <%= f.input :opportunity_amount, input_html:{ class: "form-control" }  %>
  <%= f.input :opportunity_stage, input_html:{ class: "form-control" }  %>
  <%= f.input :opportunity_probability, input_html:{ class: "form-control" }  %>
  <%= f.input :opportunity_contact_name, input_html:{ class: "form-control" }  %>
  <%= f.input :opportunity_comments,  :as => :text, input_html:{ class: "form-control"}  %>
  <%= f.input :opportunity_closing_date, input_html:{ class: "form-control" }  %>
  <%= f.button :submit, class: "btn submit-button btn-lg btn-warning"  %>

<% end %>