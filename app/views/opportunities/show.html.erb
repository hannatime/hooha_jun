<%= render 'layouts/dashboard_top'%>
<div class="dashboard-heading hidden-sm hidden-md hidden-lg">
  <h2>Opportunity</h2>
</div>
<div class="dashboard-heading-xs hidden-xs">
  <h2>Opportunity</h2>
</div>
<% if current_user.present? %>
          <div class="row">
            <div class="col-sm-12 text-center">
            <%= render 'layouts/messages'%>
        </div>
            </div>
          <% end %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @opportunity.opportunity_name.to_s.upcase%></h3>
  </div>
  <div class="panel-body">
    <div class="list-group">
<div class="panel-heading black-text bg-info">
                    <p>Account: <%= link_to @opportunity.account.account_name.to_s.titlecase, @opportunity.account %></p>
                    <p><span>Close Date: <%= @opportunity.opportunity_closing_date.to_s.capitalize %></span> </p>
                    <p><span>Stage: <%==@opportunity.opportunity_stage.to_s.capitalize%></span> </p>
                    <p><span>Probability: <%= @opportunity.opportunity_probability.to_s.capitalize%></span></p>
                    <p><span>Amount: <%= @opportunity.opportunity_amount.to_s.capitalize%></span></p>
                    <p><span>Comments: <%= @opportunity.opportunity_comments.to_s.capitalize%></span></p>
                       <%= link_to 'Edit', edit_opportunity_path(@opportunity) %>|<%= link_to 'Delete', @opportunity, method: :delete, data: { confirm: 'Are you sure?' } %>
                      <div class ="account-panel"> 
                       <div class="panel panel-primary">
                        <div class="panel-heading">
                          <h3 class="panel-title">Tasks</h3>
                        </div>
                          </div>
                            <div class="panel-heading black-text bg-primary">
                          <% if @opportunity.tasks.empty?%>
                                 <div class="text-center black-text">
                                  "<%= link_to "Add your first task here or click +Task".html_safe, new_task_path('messages')%>"
                                </div>
                                  <%end%>
                            <ul>
                            <% @opportunity.tasks.each do |task| %>
                            <li><%= link_to task.task_name, task %></li>
                            <% end %>
                            </ul>
                          </div>
                        </div>
                      </div>
                      </div>
                      
        </div>
      </div>
    </div>
<%= render 'layouts/dashboard_bottom'%>