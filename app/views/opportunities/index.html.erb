<%= render 'layouts/dashboard_top'%>

<div class="dashboard-heading hidden-sm hidden-md hidden-lg">
  <h2> Opportunity List</h2>
</div>
<div class="dashboard-heading-xs hidden-xs">
  <h2> Opportunity List </h2>
</div>

<table class="table table-condensed" width="647px">
  <thead>
    <tr>
      <th>Opportunity Name</th>
      <th>Edit Account</th>
      <th>Delete Account</th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= link_to opportunity.opportunity_name.to_s.capitalize, opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Delete', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opportunity', new_opportunity_path, class: "btn submit-button btn-lg btn-warning" %>

<%= render 'layouts/dashboard_bottom'%>
