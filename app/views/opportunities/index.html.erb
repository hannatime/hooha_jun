<%= render 'layouts/dashboard_top'%>

<div class="dashboard-heading hidden-sm hidden-md hidden-lg">
  <h2>Opportunities List</h2>
</div>
<div class="dashboard-heading-xs hidden-xs">
  <h2>Opportunities List</h2>
</div>
            <div class="panel panel-info hidden-md hidden-lg">
              <div class="panel-heading">
                <h3 class="panel-title">Opportunities - Sort by <%= content_tag :th, sort_link(@q, :opportunity_name, 'Name', default_order: :desc) %> - <%= content_tag :th, sort_link(@q, :opportunity_closing_date, 'Closing Date', default_order: :desc) %> - <%= content_tag :th, sort_link(@q, :opportunity_amount, 'Amount', default_order: :desc) %> - <%= content_tag :th, sort_link(@q, :opportunity_stage, 'Stage', default_order: :desc) %> - <%= content_tag :th, sort_link(@q, :opportunity_probability, 'Probability', default_order: :desc) %></h3>
              </div>
              <div class="panel-body">
                <small class="black-text task-info"><%= page_entries_info @opportunities %></small>
                <div class="list-group">
                  <% if @opportunities.empty?%>
                  <br>
                 <div class="black-text">
                  "<%= link_to "Add your first opportunity here or click +Opportunity".html_safe, new_opportunity_path%>"
                </div>
                  <%end%>
                                  <small class="black-text task-info"><%= paginate @opportunities , :window => 2%></small>

              <% @opportunities.each do |opportunity| %>
            <div class=" black-text">
             <table class="black-text table-responsive table-condensed table table-condensed white-bg">
              <tr>
                <th><strong>Name:</strong></th>
                <th><strong><%=link_to opportunity.opportunity_name.to_s.upcase, opportunity%></strong></th>
              </tr>
              <tr>
                <td>Account:</td>
                <td><%= link_to opportunity.account.account_name.to_s.titlecase, opportunity.account %></td>
              </tr>
              <tr>
                <td>Close Date:</td>
                <td><%= opportunity.opportunity_closing_date.to_s.capitalize %></td>
              </tr>
              <tr>
                <td>Stage:</td>
                <td><%==opportunity.opportunity_stage.to_s.capitalize%></td>
              </tr>
              <tr>
                <td>Amount:</td>
                <td>$<%= opportunity.opportunity_amount.to_s.capitalize%></td>
              </tr>
              <tr>
                <td>Probability:</td>
                <td><%= opportunity.opportunity_probability.to_s.capitalize%></td>
              </tr>
              <tr>
                <td>Comments:</td>
                <td><%= opportunity.opportunity_comments.to_s.capitalize%></td>
              </tr>
            <tr>
              <td> <strong><%= link_to 'Edit', edit_opportunity_path(opportunity) %>|<%= link_to 'Delete', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></strong></td>
              <td></td>
          </tr>
            </table>
           
            </div>

                <% end %>

                <%= paginate @opportunities , :window => 2%>
                </div>
                
              </div>

            </div>

  <div class="panel panel-info hidden-xs hidden-sm">
  <div class="panel-heading"><h3 class="panel-title">Opportunities</h3></div>
  <div class="panel-body">
    <p><small class="black-text task-info"><%= page_entries_info @opportunities %></small></p>
    <%= paginate @opportunities , :window => 2%>
  </div>
  <table class="table black-text table-striped white-bg">
    </tr>
      <th><%= sort_link(@q, :opportunity_name, 'Name', default_order: :desc) %></th>
      <th><%= sort_link(@q, :account_id, 'Account Name', default_order: :desc) %></th>
      <th><%= sort_link(@q, :opportunity_closing_date, 'Closing Date', default_order: :desc) %></th>
      <th><%= sort_link(@q, :opportunity_stage, 'Stage', default_order: :desc) %></th>
      <th><%= sort_link(@q, :opportunity_amount, 'Amount', default_order: :desc) %></th>
      <th><%= sort_link(@q, :opportunity_probability, 'Probability', default_order: :desc) %></th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
   <% @opportunities.each do |opportunity| %>
    </tr>
      <td><%=link_to opportunity.opportunity_name.to_s.upcase, opportunity%></td>
     <td><%= link_to opportunity.account.account_name.to_s.titlecase, opportunity.account %></td>
     <td><%= opportunity.opportunity_closing_date.to_s.capitalize %></td>
     <td><%==opportunity.opportunity_stage.to_s.capitalize%></td>
     <td>$<%= opportunity.opportunity_amount.to_s.capitalize%></td>
     <td><%= opportunity.opportunity_probability.to_s.capitalize%></td>
     <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
     <td><%= link_to 'Delete', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </table>
  <div id="pagination">
<%= paginate @opportunities , :window => 2 %>
</div>

</div>

<%= render 'layouts/dashboard_bottom'%>
