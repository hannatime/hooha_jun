<div class="row">
  <div class="col-sm-6 hidden-xs">
    <h1>Join Hooha Now</h1>
    <h2>HGet a free trial</h2>
    <p>Yeah, Hooha's pretty new, we're really excited about helping small business sales people do better business. Take a free trial, the first 50 onboard will get 6 months for free!
    </p>
  </div>

  <div class="col-sm-6">
    <%= devise_error_messages! %>
    <%= hidden_field_tag 'plan', params[:plan] %>
    <%= display_base_errors resource %>
    
    <%if params[:plan] == 'free' || params[:plan] !='silver' || params[:plan] != 'gold' || params[:plan] != 'platinum'%>
      <%= form_for(resource, :as => resource_name, 
      :url => registration_path(resource_name), 
      :html => { :class => "card_form-vertical" }) do |f| %>

    <h1>30 Day Free Trial</h1>

      <div class="form-group">
        <div class="row">
              <%= f.label :username %>
              <%= f.text_field :username, :autofocus => true, class: "form-control" %>  
        </div>
      

        <div class="row">
              <%= f.label :email %>
              <%= f.email_field :email, :required => true, class: "form-control" %>  
        </div>


        <div class="row">       
              <%= f.label :password %>
              <%= f.password_field :password, :required => true, class: "form-control" %>
        </div>

        <div class="row">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, :required => true, class: "form-control" %>
        </div>

          <div class="row submit-button">
            <%= f.submit "Sign up", class: "btn btn-block btn-lg btn-warning" %>
          </div> 
        <%= render "devise/shared/links" %>
        </div> 
        <% end %>
      <% end %>

      <%if params[:plan] != 'free' && params[:plan] =='silver' || params[:plan] == 'gold' || params[:plan] == 'platinum'%>
      
      <h1><%= params[:plan].titleize if params[:plan] %> Subscription Plan</h1>

      <%= form_for(resource, :as => resource_name, 
      :url => registration_path(resource_name), 
      :html => { :class => "card_form-vertical" }) do |f| %>

        <div class="form-group">
        <div class="row">
          <%= f.label :username %>
          <%= f.text_field :username, :autofocus => true, class: "form-control" %>  
        </div>

        <div class="row">
          <%= f.label :email %>
          <%= f.email_field :email, :required => true, class: "form-control" %>  
        </div>

        <div class="row">            
            <%= f.label :password %>
            <%= f.password_field :password, :required => true, class: "form-control" %>
        </div>

        <div class="row">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, :required => true, class: "form-control" %>
        </div>
        <hr>

          <div class="row">
              <%= label_tag :card_number, "Credit Card Number" %>
              <%= text_field_tag :card_number, nil, name: nil, class: "form-control" %>
          </div>

          <div class="row">
            <div class="cvv-group"> 
              <%= label_tag :card_code, "CVV" %><br>
              <%= text_field_tag :card_code, nil, name: nil, class: "cvv"  %> 
              </div>        
              <div class="select">
              <%= label_tag :card_month, "Card Expiration" %> <br>
              <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"}%>
              <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+10}, {name: nil, id: "card_year"}%>
             </div>
          </div>

          <div class="row submit-button">
              <%= f.submit "Sign up", class: "btn btn-block btn-warning btn-lg" %>
              <%= label_tag :card_month, "Not Ready?" %><br>
            <%= link_to 'Free Trial', new_user_registration_path(:plan => 'free'), :class => 'btn btn-success btn-lg' %>
          </div>
          <%= render "devise/shared/links" %>
          </div>
          <% end %>
        <% end %>
    <% end %>
    
  
  
  

    </div>
  </div>
</div>