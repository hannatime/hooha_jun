<div class="row">
  <div class="col-sm-6">
    <h1>
      Edit User <small><%= "#{@user.username.capitalize} - id: #{@user.id}" %></small>
    </h1>
    <p><%= link_to "Back to Users", admin_users_path %></p>

    <%= form_for [:admin, @user], :html => { :role => "form" } do |f| %>
    
    <div class="form-group">
      <div class="row">
          <%= f.label :username %>
          <%= f.text_field :username, :autofocus => true, class: "form-control" %>  
    </div>
    
      <div class="row">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>  
        </div>

      <div class="row">
      <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

      <div class="row">
      <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
    
    <% unless current_user.id == @user.id %>
    
    <div class="checkbox">
      <%= f.check_box :locked %> <%= f.label :locked, "Is Locked?" %>
    </div>
    
    <div class="checkbox">
      <%= f.check_box :admin %> <%= f.label :admin, "Is Admin?" %>
    </div>  

    <% end %>

    <div class="row">
        <%= f.submit "Update User", class: "btn submit-button btn-lg btn-danger" %>
    </div>    
    
    <% end %>

  </div>
</div>