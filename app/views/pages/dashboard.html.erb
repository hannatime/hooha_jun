<%= render 'layouts/dashboard_top'%>

<div class="dashboard-heading hidden-sm hidden-md hidden-lg">
  <h2>Dashboard</h2>
</div>
<div class="dashboard-heading-xs hidden-xs">
  <h2>Dashboard</h2>
</div>
<div class="row hidden-xs hidden-sm">
          <div class="col-md-3">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-check-square-o fa-3x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <strong><p class="announcement-heading"><%=@tasks.count%></p></strong>
                  </div>
                </div>
              </div>
              
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                      <%= link_to 'Tasks!', tasks_path %>
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-3">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-group fa-3x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <strong><p class="announcement-heading"><%=@customers.count%></p></strong>
                  </div>
                </div>
              </div>
              <a href="#">
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                      <%= link_to 'Contacts', customers_path %>
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-3">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-dollar fa-3x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <strong><p class="announcement-heading"><%=@opportunities.count%></p></strong>
                  </div>
                </div>
              </div>
              <a href="#">
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                      <%= link_to 'Opportunities', opportunities_path %>
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-3">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-building-o fa-3x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <strong><p class="announcement-heading"><%=@accounts.count%></p></strong>
                  </div>
                </div>
              </div>
              <a href="#">
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                      <%= link_to 'Accounts', accounts_path %>
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div><!-- /.row -->

        <div class="row">
          
          <div class="col-lg-6">
                        <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title">TASKS</h3>
              </div>
              <div class="panel-body">
                <div class="list-group">
              <% @tasks.each do |task| %>
             
              <div class="panel-heading black-text bg-info">
                    <strong><%= link_to task.task_name.to_s.upcase, task%></strong>
                    <p><span>Due Date: <%=task.task_due_date.to_s.upcase  %></span> </p>
                    <p><span>Type: <%==task.task_type.to_s.capitalize%></span> </p>
                    <p><span>Comments: <%=task.task_comments.to_s.capitalize%></span></p>
                       <%= link_to 'Edit', edit_task_path(task) %>|<%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>|<%= link_to 'Show', task %>
              </div>
              <hr>
                <% end %>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-lg-6 hidden-xs">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title">OPPORTUNITIES</h3>
              </div>
              <div class="panel-body">
                <div class="list-group">
              <% @opportunities.each do |opportunity| %>
             
              <div class="panel-heading black-text bg-info">
                    <strong><%=link_to opportunity.opportunity_name.to_s.upcase, opportunity%></strong>
                    <p><span>Close Date: <%= opportunity.opportunity_closing_date.to_s.capitalize %></span> </p>
                    <p><span>Stage: <%==opportunity.opportunity_stage.to_s.capitalize%></span> </p>
                    <p><span>Probability: <%= opportunity.opportunity_probability.to_s.capitalize%></span></p>
                    <p><span>Comments: <%=opportunity.opportunity_comments.to_s.capitalize%></span></p>
                       <%= link_to 'Edit', edit_opportunity_path(opportunity) %>|<%= link_to 'Delete', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %>|<%= link_to 'Show', opportunity %>
              </div>
              <hr>
                <% end %>
                </div>
                
              </div>

            </div>

          </div>
        </div><!-- /.row -->

<%= render 'layouts/dashboard_bottom'%>