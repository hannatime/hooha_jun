<%= render 'layouts/dashboard_top'%>

<div class="dashboard-heading hidden-sm hidden-md hidden-lg">
  <h2>Dashboard</h2>
</div>
<div class="dashboard-heading-xs hidden-xs">
  <h2>Dashboard</h2>
</div>

<table class="table table-condensed" width="647px">
  <h3>Tasks</h3>
  <thead>
    <tr>
      <th>Name</th>
      <th>Due Date</th>
      <th>Type</th>
      <th>Comments</th>
      <th></th>
      <th></th> 
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.task_name.to_s.capitalize, task %></td>
        <td><%= link_to task.task_due_date.to_s.capitalize, task %></td>
        <td><%= link_to task.task_type.to_s.capitalize, task %></td>
        <td><%= link_to task.task_comments.to_s.capitalize, task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="col-sm-6">
<table class="table table-condensed" width="647px">
  <thead>
    <tr>
      <th>Account Name</th>
      <th>Edit Account</th>
      <th>Delete Account</th>
    </tr>
  </thead>

  <tbody>
<% @accounts.each do |account| %>

      <tr>
        <td><%= link_to account.account_name.to_s.capitalize, account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Delete', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-condensed" width="647px">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Edit Customer</th>
      <th>Delete Customer</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.customer_first_name.to_s.capitalize + " " + customer.customer_last_name.to_s.capitalize, customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="col-sm-6">
<table class="table table-condensed" width="647px">
  <thead>
    <tr>
      <th>Opportunity Name</th>
      <th>Edit Opportunity</th>
      <th>Delete Opportunity</th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= link_to opportunity.opportunity_name.to_s.capitalize, opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Delete', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<%= render 'layouts/dashboard_bottom'%>