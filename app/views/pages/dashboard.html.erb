<%= render 'layouts/dashboard_top'%>

<div class="dashboard-heading hidden-sm hidden-md hidden-lg">
  <h2>Dashboard</h2>
</div>
<div class="dashboard-heading-xs hidden-xs">
  <h2>Dashboard</h2>
</div>
<div class="row hidden-xs hidden-sm">
          <div class="col-md-3">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-check-square-o fa-3x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <p class="announcement-heading"><%=@tasks.count%></p>
                    <p class="announcement-text">Tasks!</p>
                  </div>
                </div>
              </div>
              
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                      <%= link_to 'View Tasks', tasks_path %>
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-3">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-group fa-3x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <p class="announcement-heading"><%=@customers.count%></p>
                    <p class="announcement-text">Contacts</p>
                  </div>
                </div>
              </div>
              <a href="#">
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                      <%= link_to 'View Contacts', customers_path %>
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-3">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-dollar fa-3x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <p class="announcement-heading"><%=@opportunities.count%></p>
                    <p class="announcement-text">Opps</p>
                  </div>
                </div>
              </div>
              <a href="#">
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                      <%= link_to 'View Opps', opportunities_path %>
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
          <div class="col-md-3">
            <div class="panel panel-info">
              <div class="panel-heading">
                <div class="row">
                  <div class="col-xs-6">
                    <i class="fa fa-building-o fa-3x"></i>
                  </div>
                  <div class="col-xs-6 text-right">
                    <p class="announcement-heading"><%=@accounts.count%></p>
                    <p class="announcement-text">Accounts</p>
                  </div>
                </div>
              </div>
              <a href="#">
                <div class="panel-footer announcement-bottom">
                  <div class="row">
                    <div class="col-xs-6">
                      <%= link_to 'View Accounts', accounts_path %>
                    </div>
                    <div class="col-xs-6 text-right">
                      <i class="fa fa-arrow-circle-right"></i>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          </div>
        </div><!-- /.row -->

        <div class="row">
          
          <div class="col-lg-6">
                        <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title">TASKS</h3>
              </div>
              <div class="panel-body">
                <div class="list-group">
              <% @tasks.each do |task| %>
             
              <div class="panel-heading black-text bg-info">
                    <strong><%= link_to task.task_name.to_s.upcase, task%></strong>
                    <p><span>Due Date</span> - <span><%=task.task_due_date.to_s.upcase  %></span> </p>
                    <p><span>Type</span> - <span><%==task.task_type.to_s.capitalize%></span> </p>
                    <p><span>Comments</span> - <span><%=task.task_comments.to_s.capitalize%></span></p>
                       <%= link_to 'Edit', edit_task_path(task) %>|<%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>|<%= link_to 'Show', task %>
              </div>
              <hr>
                <% end %>
                </div>
              </div>
            </div>
          </div>
          
          <div class="col-lg-6 hidden-xs">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h3 class="panel-title">OPPORTUNITIES</h3>
              </div>
              <div class="panel-body">
                <div class="list-group">
              <% @opportunities.each do |opportunity| %>
             
              <div class="panel-heading black-text bg-info">
                    <strong><%=link_to opportunity.opportunity_name.to_s.upcase, opportunity%></strong>
                    <p><span>Close Date</span> - <span><%= opportunity.opportunity_closing_date.to_s.capitalize %></span> </p>
                    <p><span>Stage</span> - <span><%==opportunity.opportunity_stage.to_s.capitalize%></span> </p>
                    <p><span>Probability</span> - <span><%= opportunity.opportunity_probability.to_s.capitalize%></span></p>
                    <p><span>Comments</span> - <span><%=opportunity.opportunity_comments.to_s.capitalize%></span></p>
                       <%= link_to 'Edit', edit_opportunity_path(opportunity) %>|<%= link_to 'Delete', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %>|<%= link_to 'Show', opportunity %>
              </div>
              <hr>
                <% end %>
                </div>
              </div>
            </div>
          </div>
        </div><!-- /.row -->

   <script src="http://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="http://cdn.oesmith.co.uk/morris-0.4.3.min.js"></script>
    <script src="js/morris/chart-data-morris.js"></script>
    <script src="js/tablesorter/jquery.tablesorter.js"></script>
    <script src="js/tablesorter/tables.js"></script>

<%= render 'layouts/dashboard_bottom'%>