<div class="row">
  
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading" id = "silver"><h3 class="text-center">Silver</h3></div>
        <div class="panel-body text-center">
          <span style="color:black"><p class="lead" style="font-size:40px"><strong>$9 / month</strong></p></span>
        </div>
        <ul class="list-group list-group-flush text-center">
          <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i></li></span>
          <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i> Unlimited Accounts</li></span>
          <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i>1 Users</li></span>
        </ul>
        <div class="panel-footer">
          <%= link_to 'Join Now', new_user_registration_path(:plan => 'silver'), :class => 'btn btn-lg btn-block btn-default' %>
        </div>
      </div>
    </div>
  </div>
    
  <div class="col-md-4">
    <div class="panel panel-warning">
      <div class="panel-heading" id = "gold"><h3 class="text-center">Gold</h3></div>
