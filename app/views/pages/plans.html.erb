<% if !user_signed_in? %>

<div class="col-sm-12">
  <div class="row centered">
    <h1>Choose a plan</h1>
    <p>You can change your plan at any time</p>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default panel-silver">
        <div class="panel-heading" id = "silver"><h3 class="text-center">Silver</h3></div>
           <div class="panel-body text-center">
         <span style="color:black"><p class="lead" style="font-size:40px"><strong>$9 / month</strong></p></span>
      </div>
                         <ul class="list-group list-group-flush text-center">
                <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i>Unlimited Contacts</li></span>
                <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i>20 Accounts</li></span>
                <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i>1 User</li></span>
              </ul>
      <div class="panel-footer">
      <%= link_to 'Join Now', new_user_registration_path(:plan => 'silver'), :class => 'btn btn-lg btn-block btn-default button-silver' %>
    </div>
   </div>

    </div>
     <div class="col-md-4">
    <div class="panel panel-warning panel-gold">
       <div class="panel-heading" id = "gold"><h3 class="text-center">Gold</h3></div>
           <div class="panel-body text-center">
         <span style="color:black"><p class="lead" style="font-size:40px"><strong>$15 / month</strong></p></span>
      </div>
                         <ul class="list-group list-group-flush text-center">
                <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i>Unlimited Contacts</li></span>
                <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i> Unlimited Accounts</li></span>
                <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i>1-3 Users</li></span>
              </ul>
      <div class="panel-footer">
      <%= link_to 'Join Now', new_user_registration_path(:plan => 'gold'), :class => 'btn btn-lg btn-block btn btn-warning button-gold' %>
    </div>
   </div>

    </div>
     <div class="col-md-4">
    <div class="panel panel-info panel-platinum">
     <div class="panel-heading" id = "platinum"><h3 class="text-center ">Platinum</h3></div>
           <div class="panel-body text-center">
        <span style="color:black"><p class="lead" style="font-size:40px"><strong>$19 / month</strong></p></span>
      </div>
                         <ul class="list-group list-group-flush text-center">
                <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i>Free Trial for One Month</li></span>
                <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i> Unlimited accounts</li></span>
                <span style="color:black"><li class="list-group-item"><i class="icon-ok text-danger"></i>5-10 Users</li></span>
              </ul>
      <div class="panel-footer">
      <%= link_to 'Join Now', new_user_registration_path(:plan => 'platinum'), :class => 'btn btn-lg btn-block btn-primary button-platinum ' %>
    </div>
   </div>

    </div>
    </div>
  </div>
</div>
<div class="container text-center">
  <p>Plans not suitable?</p>
  <p><a href="contacts"class="btn titlebuttons btn-success btn-lg" role="button">Give us feedback</a></p>        
</div>

<% end %>