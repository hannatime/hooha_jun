<%= render 'layouts/dashboard_top'%>

<h3><%=@account.account_name%></h3>
<p id="notice"><%= notice %></p>


<p>Account Opportunities</p>
<ul>
  <% @account.opportunities.each do |opportunity| %>
  <li><%= link_to opportunity.opportunity_name, opportunity %> </li>
  <% end %>
</ul>

<p>Account Contacts</p>
<ul>
  <% @account.customers.each do |customer| %>
  <li><%= link_to customer.customer_first_name, customer %> </li>
  <% end %>
</ul>
<%= link_to 'Edit', edit_account_path(@account) %> |
<%= link_to 'Back', accounts_path %>
<%= render 'layouts/dashboard_bottom'%>

