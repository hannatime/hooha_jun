<%= render 'layouts/dashboard_top'%>

<div class="dashboard-heading hidden-sm hidden-md hidden-lg">
  <h2>Account</h2>
</div>
<div class="dashboard-heading-xs hidden-xs">
  <h2>Account</h2>
</div>
<% if current_user.present? %>
          <div class="row">
            <div class="col-sm-12 text-center">
            <%= render 'layouts/messages'%>
        </div>
            </div>
          <% end %>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= @account.account_name.to_s.upcase%></h3>
  </div>
  <div class="panel-body">
    <div class="list-group">      
<div class="panel-heading black-text bg-info">
          <address>
            Address:<%= @account.account_address.to_s.titlecase %> <br>
            <%= @account.account_city.to_s.titlecase %><br>
            <%= @account.account_state.to_s.titlecase %>
            <%= @account.account_country.to_s.titlecase %> <%= @account.account_postcode.to_s.titlecase %><br>
            Phone:<%= @account.account_phone.to_s.capitalize %><br>
          </address>
          <p><%= link_to 'Edit', edit_account_path(@account) %> | <%= link_to 'Delete', @account, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<div class="col-md-6"> 
          <h3>Opportunities</h3>

          <table class="black-text table-responsive table-bordered table table-condensed white-bg">
                            <tr>
                              <th>Name</th>
                              <th>Amount</th>
                            </tr>
                            <% @account.opportunities.each do |opportunity| %>
                            <tr>
                              <td><%= link_to opportunity.opportunity_name, opportunity %></td>
                              <td>$<%= link_to opportunity.opportunity_amount.to_s, opportunity %></td>
                            </tr>
                            <% end %>
                            <tr>
                              <th>Total</th>
                              <td>$<%= @account.opportunities.sum(:opportunity_amount).to_s %></td>
                          </tr>
                            </table>
                            <% if @account.opportunities.empty?%>
                 <div class="text-center black-text">
                  <%= link_to "Add your first opportunity here +Opportunity".html_safe, new_opportunity_path%>
                </div>
                  <%end%>
                </div>
<div class="col-md-6"> 

          <h3>Contacts</h3>
            <table class="black-text table-responsive table-bordered table table-condensed white-bg">
                            <tr>
                              <th>Name</th>
                            </tr>
                            <% @account.customers.each do |customer| %>
                            <tr>
                              <td><%= link_to customer.customer_first_name + " " + customer.customer_last_name, customer %></td>
                            </tr>
                            <% end %>
                            </table>
                            <% if @account.customers.empty?%>
                 <div class="text-center black-text">
                  <%= link_to "Add your first contact here +Contact".html_safe, new_customer_path%>
                </div>
                  <%end%>
          
        </div>
      </div></div>
                
        </div>
      </div>
    </div>
        </div>

<%= render 'layouts/dashboard_bottom'%>

