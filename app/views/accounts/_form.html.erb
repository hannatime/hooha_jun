<%= simple_form_for @account do |f| %>

      <% if @account.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@account.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
          <% @account.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

  <%= f.input :account_name, :required => true,  input_html:{ class: "form-control" } %>
  <%= f.input :account_phone, :required => true, input_html:{ class: "form-control" }  %>
  <hr>
  <%= f.input :account_website, input_html:{ class: "form-control" }  %>
  <%= f.input :account_address, input_html:{ class: "form-control" }  %>
  <%= f.input :account_city, input_html:{ class: "form-control" }  %>
  <%= f.input :account_state, input_html:{ class: "form-control" }  %>
  <%= f.input :account_country, input_html:{ class: "form-control" }, priority: ["Australia", "United States", "New Zealand", "United Kingdom"]%>
  <%= f.button :submit, :label => "Submit", class: "btn submit-button btn-lg btn-warning"  %>

<% end %>