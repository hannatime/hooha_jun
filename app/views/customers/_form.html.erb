<%= simple_form_for @customer do |f| %>

      <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
          <% @customer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
  <%= f.input :customer_first_name, :label => "First Name",:required => true,  input_html:{ class: "form-control" } %>
  <%= f.input :customer_last_name, :label => "Last Name",:required => true, input_html:{ class: "form-control" }  %>
  <%= f.input :customer_email, as: :email, :label => "Email Address", input_html:{ class: "form-control" }  %>
  <%=f.association :account,:label => 'Account Name', label_method: :account_name, value_method: :id, include_blank: '-- Select One --', collection: Account.accessible_by(current_ability), :required => true%>
    <hr>
  <%= f.input :customer_phone, as: :tel, :label => "Primary Phone",input_html:{ class: "form-control" }  %>
  <%= f.input :customer_address, :label => "Address",input_html:{ class: "form-control" }  %>
  <%= f.input :customer_city, :label => "City",input_html:{ class: "form-control" }  %>
  <%= f.input :customer_state, :label => "State",input_html:{ class: "form-control" }  %>
  <%= f.input :customer_country, :label => "Country",input_html:{ class: "form-control" }, priority: ["Australia", "United States", "New Zealand", "United Kingdom"]  %>
  <%= f.input :customer_postcode, :label => "Postcode",input_html:{ class: "form-control" }  %>
  <%= f.button :submit, "Submit", class: "btn submit-button btn-lg btn-warning"  %>
<% end %>


