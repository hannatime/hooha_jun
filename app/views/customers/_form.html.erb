<%= simple_form_for @customer do |f| %>

      <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this account from being saved:</h2>

          <ul>
          <% @customer.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
  <%= f.input :customer_first_name, :label => "Contact First Name",:required => true,  input_html:{ class: "form-control" } %>
  <%= f.input :customer_last_name, :label => "Contact Last Name",:required => true, input_html:{ class: "form-control" }  %>
  <%= f.input :customer_email, :label => "Contact Email Address",:required => true, input_html:{ class: "form-control" }  %>
  <%= f.label :customer_account, :label => "Contact Account Name"%>
  <%= f.select :account_id, options_for_select(@accounts),{:include_blank => '-- Select One --'}, { class: "form-control" } %>
  <hr>
  <%= f.input :customer_phone, :label => "Contact Primary Phone",input_html:{ class: "form-control" }  %>
  <%= f.input :customer_address, :label => "Contact Address",input_html:{ class: "form-control" }  %>
  <%= f.input :customer_city, :label => "Contact City",input_html:{ class: "form-control" }  %>
  <%= f.input :customer_state, :label => "Contact State",input_html:{ class: "form-control" }  %>
  <%= f.input :customer_country, :label => "Contact Country",input_html:{ class: "form-control" }, priority: ["Australia", "United States", "New Zealand", "United Kingdom"]  %>
  <%= f.input :customer_postcode, :label => "Contact Postcode",input_html:{ class: "form-control" }  %>

  <%= f.button :submit, :label => "Submit", class: "btn submit-button btn-lg btn-warning"  %>
<% end %>