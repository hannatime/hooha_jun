<%= render 'layouts/dashboard_top'%>

<div class="dashboard-heading hidden-sm hidden-md hidden-lg">
  <h2>Contact List</h2>
</div>
<div class="dashboard-heading-xs hidden-xs">
  <h2>Contact List</h2>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">CONTACTS</h3>
  </div>
  <div class="panel-body">
    <div class="list-group">
       <% if @customers.empty?%>
                 <div class="text-center black-text">
                  "<%= link_to "Add your first contact here +Contact".html_safe, new_customer_path('messages')%>"
                </div>
                  <%end%>
      <% @customers.each do |customer| %>
      <div class ="task">
        <div class="panel-heading black-text bg-info">
           
          <address>
            <strong><%= link_to customer.customer_first_name.upcase + " " + customer.customer_last_name.upcase, customer %></strong><br>
            <a href="mailto:<%= customer.customer_email.to_s.downcase %>"><%= customer.customer_email.to_s.downcase %></a><br>
            Address:<%= customer.customer_address.to_s.titlecase %> <br>
            <%= customer.customer_city.to_s.titlecase %><br>
            <%= customer.customer_state.to_s.titlecase %>
            <%= customer.customer_country.to_s.titlecase %>, <%= customer.customer_postcode.to_s %><br>
            Phone:<%= customer.customer_phone.to_s %>
          </address>
           <%= link_to 'Edit', edit_customer_path(customer) %>|<%= link_to 'Delete', customer, method: :delete, data: { confirm: 'Are you sure?' } %>|<%= link_to 'Show', customer %>
        </div>
      </div>
      <hr>
      <% end %>
    </div>
  </div>
</div>

<%= render 'layouts/dashboard_bottom'%>